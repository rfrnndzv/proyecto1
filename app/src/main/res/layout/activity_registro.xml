<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rodrick.licoreriaapp.RegistroActivity"
    android:background="@color/fondoApp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Formulario de Producto"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/colortitulo"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingBottom="3dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CÃ³digo:"
            android:textColor="@color/Texto"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/ET_codigo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="@color/fuenteBoton"
            android:textSize="20dp"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nombre:"
            android:textColor="@color/Texto"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/Et_nombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="@color/fuenteBoton"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tipo:"
            android:textColor="@color/Texto"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/ET_tipo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="@color/fuenteBoton"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stock:"
            android:textColor="@color/Texto"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/ET_stock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="@color/fuenteBoton"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Volumen:"
            android:textColor="@color/Texto"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/ET_volumen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="@color/fuenteBoton"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Precio Compra:"
            android:textColor="@color/Texto"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/ET_precioCompra"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/fuenteBoton"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Precio Venta:"
            android:textColor="@color/Texto"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/ET_precioVenta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="@color/fuenteBoton"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Guardar"
            android:textColor="@color/colortitulo"
            android:background="@color/fondoBoton"
            android:textSize="20dp"
            android:textStyle="bold"
            android:onClick="guardar"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancelar"
            android:layout_marginLeft="10dp"
            android:background="@color/fondoBoton"
            android:textColor="@color/fuenteBoton"
            android:textSize="20dp"/>

    </LinearLayout>


</LinearLayout>
